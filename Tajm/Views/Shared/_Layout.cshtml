<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tajm</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

    <nav class="responsive-nav" id="js-responsive-nav">
        <ul class="responsive-nav__list">
            <li class="responsive-nav__item">
                @Html.ActionLink("Hem", "Index", "Home", null, new { @class = "responsive-nav__link" })
            </li>
            <li class="responsive-nav__item">
                @Html.ActionLink("Kunder", "Index", "Customers", null, new { @class = "responsive-nav__link" })
            </li>
            <li class="responsive-nav__item">
                @Html.ActionLink("Resurser", "Index", "Employees", null, new { @class = "responsive-nav__link" })
            </li>
            <li class="responsive-nav__item">
                @Html.ActionLink("Uppgifter", "Index", "WorkTasks", null, new { @class = "responsive-nav__link" })
            </li>
        </ul>
    </nav>
    <div id="showAddTask" style="position:absolute;right:0.5rem;top:0.3rem;background:#f43059;color:black;width:3rem;height:3rem;border-radius:2rem;text-align:center;font-size:2rem;">+</div>


        @RenderBody()

        <script src="https://cdnjs.cloudflare.com/ajax/libs/riot/2.2.4/riot.js"></script>
        <script src="~/Scripts/moment-with-locales.min.js"></script>
        <script src="~/Scripts/moment-duration-format.js"></script>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/layoutscript")
        @RenderSection("scripts", required: false)

        <script src="~/Scripts/app/tags/tags.js"></script>
        <script src="~/Scripts/app/polyfills.js"></script>
        <script src="~/Scripts/app/models.js"></script>
        <script src="~/Scripts/app/store.js"></script>
        <script src="~/Scripts/app/dataloader.js"></script>
        <script>
            moment.locale('sv');
            riot.mount('*')
        </script>
    <script>

    document.getElementById('showAddTask').addEventListener('click', function(){
        var theForm = document.getElementById('addTaskTimeForm');
        console.log(theForm.style.display);
        if (theForm.style.display == "none") {
            theForm.style.display = 'block';
        } else {
            theForm.style.display = 'none';
        }

    });

    </script>
</body>
</html>

